<Window x:Class="DHCPServer.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        prism:ViewModelLocator.AutoWireViewModel="True"      
        xmlns:local="clr-namespace:DHCPServer.Views"
        xmlns:lh="clr-namespace:DHCPServer.UICore"
        xmlns:converter="clr-namespace:DHCPServer.UICore.Converters"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <ToolBar>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="5" Background="{x:Null}" Padding="3" Command="{Binding OpenGraphViewCommand}">График</Button>
                    <Button Margin="5" Background="{x:Null}" Padding="3" Command="{Binding OpenGraphDataViewCommand}">Таблица</Button>
                </StackPanel>
            </ToolBar>
        </Grid>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion"/>
    </Grid>
</Window>

<UserControl x:Class="DHCPServer.Views.MultiDeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>

            <ToolBar>
                <Button Command="{Binding OpenNewDevcieViewCommand}">Добавить</Button>
            </ToolBar>
        </Grid>
        <Grid Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" x:Name="col1"/>
            <Grid Grid.Column="1" x:Name="col2"/>
            <Grid Grid.Column="2" x:Name="col3"/>
            <Grid Grid.Column="3" x:Name="col4"/>
            <Grid Grid.Column="4" x:Name="col5"/>
            <Grid Grid.Column="5" x:Name="col6"/>
            <Grid Grid.Column="6" x:Name="col7"/>
            <Grid Grid.Column="7" x:Name="col8"/>
        </Grid>


        <ListView ItemsSource="{Binding RoomsCollection,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                      x:Name="AppDetailslistView" Grid.Row="1" Margin="10,0"
                      ItemContainerStyle="{StaticResource LVItemStyleX}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      HorizontalContentAlignment="Stretch" Foreground="#DDF9F9F9" 
                      Background="{x:Null}" BorderBrush="{x:Null}">
            <ListView.View>
                <GridView>

                    <GridViewColumn Width="{Binding ElementName=col1,Path=ActualWidth}"                              
                                    Header="Псевдоним"
                                    HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ActiveDevice.Nick}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="10,2,0,2" Margin="0" 
                                               Foreground="#FF0B245B" 
                                               VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="{Binding ElementName=col2,Path=ActualWidth}"
                                    Header="IPAddress"
                                    HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>

                                <TextBlock Text="{Binding Path=ActiveDevice.IPAddress}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="10,2,0,2" Margin="0,0,15,0" 
                                               Foreground="#FF0B245B"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="{Binding ElementName=col3,Path=ActualWidth}"
                                        Header="Температура"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col3,Path=ActualWidth}">
                                    <TextBlock Text="{Binding RoomInfo.Temperature}"
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,2" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Red" 
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Width="{Binding ElementName=col4,Path=ActualWidth}"
                                        Header="Влажность"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col4,Path=ActualWidth}">
                                    <TextBlock Text="{Binding RoomInfo.Humidity}"
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,2" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Blue" 
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn   Width="{Binding ElementName=col5,Path=ActualWidth}"
                                        Header="Температура мид"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col5,Path=ActualWidth}">
                                    <TextBlock Text="{Binding Path=RoomInfo.TemperatureMiddle}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,4" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Red" 
                                               VerticalAlignment="Center">
                                    </TextBlock>

                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn   Width="{Binding ElementName=col6,Path=ActualWidth}"
                                        Header="Влажность мид"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col6,Path=ActualWidth}">
                                    <TextBlock Text="{Binding Path=RoomInfo.HumidityMiddle}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,4" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Blue" 
                                               VerticalAlignment="Center">
                                    </TextBlock>

                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn   Width="{Binding ElementName=col7,Path=ActualWidth}"
                                        Header="Температура процесс"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col7,Path=ActualWidth}">
                                    <TextBlock Text="{Binding Path=RoomInfo.TemperatureProcess}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,4" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Red" 
                                               VerticalAlignment="Center">
                                    </TextBlock>

                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn   Width="{Binding ElementName=col8,Path=ActualWidth}"
                                        Header="Влажность процесс"
                                        HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="{Binding ElementName=col8,Path=ActualWidth}">
                                    <TextBlock Text="{Binding Path=RoomInfo.HumidityProcess}" 
                                               FontWeight="Medium" FontSize="13" 
                                               Padding="5,4" Margin="0,0,15,0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Blue" 
                                               VerticalAlignment="Center">
                                    </TextBlock>

                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

